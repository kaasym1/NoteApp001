<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#252525"
    tools:context=".ui.fragments.note.NoteFragment">

    <TextView
        android:id="@+id/tv_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Все заметки"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="14dp"/>

    <ImageView
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/tv_note"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:src="@drawable/baseline_view_headline" />

    <ImageView
        android:layout_marginEnd="16dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/baseline_widgets"
        app:layout_constraintTop_toTopOf="@id/tv_note"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/et_search"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:background="@drawable/edit_text_background"
        android:hint="Поиск заметок"
        android:textColorHint="@color/white"
        android:paddingHorizontal="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="95dp"
        />

    <ImageView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/et_search"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/baseline_search"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_add"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="+"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textAlignment="center"
        android:layout_marginBottom="27dp"
        android:layout_marginEnd="27dp"
        android:background="@drawable/btn_background"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_note"
        android:layout_width="match_parent"
        android:layout_height="580dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>